---
import { Image } from "astro:assets";
import mural from "../../../public/images/mural.webp";
import drop from "../../../public/images/drop.webp";
import { SITE } from "../../utils/constants"
---
<article class="w-auto">
    <div class="flex flex-col justify-center align-middle gap-10 h-[56vh]">
        <Image src={drop} alt="Drop" class="absolute left-0 -z-10 w-full md:w-5/6 md:left-20 lg:left-32 lg:w-2/5 xl:left-1/4 xl:w-1/3 h-auto object-cover" />
        <Image src={drop} alt="Drop" class="hidden lg:block absolute right-1/4 -z-10 w-2/5 xl:w-1/3 h-auto object-cover" />
        <Image src={drop} alt="Drop" class="hidden lg:block xl:hidden absolute right-20 -z-10 w-2/5 xl:w-1/3 h-auto object-cover" />
        <span class="font-caveatbrush text-7xl lg:text-9xl text-center text-yawar-200">{ SITE.tagline.toUpperCase() }</span>
        <!--<span class="text-3xl text-center">{ SITE.description_short.toUpperCase() }</span>-->
    </div>
    <Image src={mural} alt="Mural" class="relative -z-20 w-full h-auto object-cover  bg-yawar-200" />
</article>
